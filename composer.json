{
    "name": "likesistemas/eloquent-external",
    "type": "library",
    "description": "Using eloquent without linking with laravel framework.",
    "repositories": [
        {"type": "composer", "url": "https://composer.likesistemas.com.br/"}
    ],
    "require": {
        "php": ">=7.4",
        "illuminate/database": "^8.0 || ^10.0 || ^12.0",
        "illuminate/events": "^8.0 || ^10.0 || ^12.0",
        "fakerphp/faker": "^1.9",
        "symfony/finder": "^3.4 || ^5.0 || ^7.0",
        "psr/container": "^1.0 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "yoast/phpunit-polyfills": "^2.0",
        "limedeck/phpunit-detailed-printer": "^6.0",
        "rector/rector": "^2.1",
        "phpstan/phpstan": "^2.1",
        "symplify/easy-coding-standard": "^12.5",
        "php-parallel-lint/php-parallel-lint": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Like\\Database\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Like\\Database\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Like Sistemas",
            "email": "dev@likesistemas.com.br",
            "homepage": "https://www.likesistemas.com.br/"
        }
    ],
    "scripts": {
        "fix": "ecs --fix",
        "fix:ci": "ecs",
        "test": "phpunit",
        "lint": "parallel-lint --exclude .git --exclude vendor .",
        "refactor": "rector",
        "refactor:ci": "rector --dry-run",
        "analyse": "phpstan analyse",
        "analyse:baseline": "phpstan analyse --generate-baseline",
        "models:refresh": "ide-helper models"
    },
    "config": {
        "allow-plugins": {
            "kylekatarnls/update-helper": true
        }
    }
}
